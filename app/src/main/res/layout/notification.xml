<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="407dp"
        android:layout_height="194dp"
        android:layout_marginEnd="4dp"
        android:padding="5dp"
        app:layout_constraintEnd_toEndOf="parent"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteY="31dp">


        <TextView
            android:id="@+id/notification_Header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="7dp"
            android:textColor="#000000"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/warning"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.342"
            tools:text="Notification Header" />

        <ImageButton
            android:id="@+id/Allright"
            android:layout_width="34dp"
            android:layout_height="39dp"
            android:layout_marginTop="32dp"
            android:layout_marginEnd="20dp"
            android:background="@drawable/ic_check"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.934"
            app:layout_constraintStart_toEndOf="@+id/kalanSure"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_check"
            tools:ignore="MissingConstraints,VectorDrawableCompat" />

        <ImageButton
            android:id="@+id/NoIamBad"
            android:layout_width="34dp"
            android:layout_height="39dp"
            android:layout_marginTop="96dp"
            android:layout_marginEnd="24dp"
            android:background="@drawable/ic_boy"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.928"
            app:layout_constraintStart_toEndOf="@id/kalanSure"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_check"
            tools:ignore="MissingConstraints,VectorDrawableCompat" />

        <ImageView
            android:id="@+id/warning"
            android:layout_width="118dp"
            android:layout_height="109dp"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="10dp"
            tools:layout_editor_absoluteY="64dp"
            tools:src="@drawable/ic_app_icon" />

        <TextView
            android:id="@+id/kalanSure"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="32dp"
            android:text="Kalan Sure"
            app:layout_constraintStart_toEndOf="@+id/warning"
            app:layout_constraintTop_toTopOf="@+id/GerceklesmeTarihi" />

        <TextView
            android:id="@+id/LastDate"
            android:layout_width="94dp"
            android:layout_height="22dp"
            android:ems="10"
            android:inputType="date"
            app:layout_constraintStart_toEndOf="@+id/kalanSure"
            tools:layout_editor_absoluteY="156dp" />

        <TextView
            android:id="@+id/GerceklesmeTarihi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="24dp"
            android:text="Gerceklesti:"
            app:layout_constraintStart_toEndOf="@+id/warning"
            app:layout_constraintTop_toBottomOf="@+id/NotificationText" />

        <TextView
            android:id="@+id/NotificationDate"
            android:layout_width="94dp"
            android:layout_height="22dp"
            android:layout_marginTop="26dp"
            android:layout_marginBottom="5dp"
            android:ems="10"
            android:inputType="date"
            app:layout_constraintBottom_toTopOf="@+id/LastDate"
            app:layout_constraintStart_toEndOf="@+id/GerceklesmeTarihi"
            app:layout_constraintTop_toBottomOf="@+id/NotificationText"
            app:layout_constraintVertical_bias="0.848" />

        <TextView
            android:id="@+id/NotificationText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="28dp"
            android:layout_marginTop="48dp"
            android:text="Burasi Bildirim Mesaji"
            app:layout_constraintEnd_toStartOf="@+id/Allright"
            app:layout_constraintHorizontal_bias="0.023"
            app:layout_constraintStart_toEndOf="@+id/warning"
            app:layout_constraintTop_toBottomOf="@+id/notification_Header" />


    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>